@model CQA.Models.CreateAnswer

<div id="newAnswer">

    @using (Ajax.BeginForm( new AjaxOptions(){
    HttpMethod = "POST",
    Url = Url.Action("CreateAnswer", "Questions"),
    OnSuccess = "AnswerCreated(data)"})){

        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionId, new { @class= "questionId" })
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.Text)
             @Html.ValidationMessageFor(model => model.Text, String.Empty, new { @class="text-error"})
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text, new { @class= "questionText" })
        </div>
        <a href="#" class="btn skip">Preskočiť</a>
        <button type="submit" class="btn btn-primary"> Odpovedať </button> 
    }
    </div>

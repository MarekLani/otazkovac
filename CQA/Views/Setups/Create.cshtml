@model CQA.Models.Setup

@{
    ViewBag.Title = "Vytvoriť setup";
}

<h2>Vytvoriť setup</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Setup</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label" style="float:left; margin-right: 15px; margin-top: 3px;; margin-bottom: 10px;">
            @Html.LabelFor(model => model.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>

        <div style="clear:both"/>
        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubjectId", String.Empty)
            @Html.ValidationMessageFor(model => model.SubjectId)
        </div>

        <p>
            <button type="submit" class="btn">Vytvoriť setup</button>
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Späť na setupy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
